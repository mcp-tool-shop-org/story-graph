{
  "name": "StoryGraph",
  "version": "0.1.0",
  "private": true,
  "description": "Visual narrative editor for interactive fiction writers",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "better-sqlite3": "^11.10.0"
  },
  "scripts": {
    "build": "npm run build -w @storygraph/core && npm run build -w storygraph-cli",
    "build:core": "npm run build -w @storygraph/core",
    "build:cli": "npm run build -w storygraph-cli",
    "build:web": "npm run build -w storygraph-web",
    "dev:core": "npm run dev -w @storygraph/core",
    "dev:cli": "npm run dev -w storygraph-cli",
    "dev:web": "npm run dev -w storygraph-web",
    "test": "npm run test -w @storygraph/core",
    "test:run": "npm run test -w @storygraph/core",
    "test:perf": "vitest run packages/core/src/runtime/runtime.test.ts packages/core/src/core/fuzz.test.ts --reporter=json --outputFile=perf-report.json --runInBand",
    "perf:report": "node scripts/parse-perf-report.mjs perf-report.json",
    "ci:perf": "npm run test:perf && npm run perf:report",
    "smoke:release": "npm test && npm run build && npm run ci:perf",
    "typecheck": "npm run typecheck -w @storygraph/core",
    "lint": "eslint \"packages/*/src/**/*.ts\" \"apps/*/lib/**/*.ts\" \"apps/*/app/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"packages/*/src/**/*.ts\" \"apps/*/lib/**/*.ts\" \"apps/*/app/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"packages/*/src/**/*.ts\" \"apps/*/lib/**/*.ts\" \"apps/*/app/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\" \"apps/*/lib/**/*.ts\" \"apps/*/app/**/*.{ts,tsx}\"",
    "health": "npm run typecheck && npm test && npm run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.0",
    "vite": "^6.1.7",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-tool-shop-org/StoryGraph.git"
  },
  "license": "MIT",
  "overrides": {
    "esbuild": "0.27.2",
    "vite": {
      "esbuild": "0.27.2"
    },
    "vitest": {
      "esbuild": "0.27.2"
    }
  }
}
